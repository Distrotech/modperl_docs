[%-
    INCLUDE title;

    INCLUDE navbar_local_top
        nav=doc.nav
        rel_doc_root=doc.dir.rel_doc_root;
-%]


    <!-- content begin -->
    [%-
        INCLUDE page_toc toc=doc.toc;
    
        # render the content
        # index-section is used to break up the doc into sections for indexing
    
FOREACH sec = doc.body;
    -%]

    <div class="index-section">
    <!-- SwishCommand index -->
    
    [%-
    sec;
    "<br><br>\n";
    IF loop.count == loop.size;
        INCLUDE navbar_local_bottom
            nav=doc.nav
            rel_doc_root=doc.dir.rel_doc_root;
    ELSE;
        INCLUDE top_link;
    END;
    -%]
    
    <br><br>
    <!-- SwishCommand noindex -->
    </div>
[%- END -%]

    <!-- content end -->
