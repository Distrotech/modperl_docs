[% # render one level of toc and call recursively itself if there are
   # nested levels.
   # expected args:
   # subs - an array with keys indentical to 'toc' from above.
%]
    [% FOREACH sec = subs %]
        <dl>
        <dt><a href="[% sec.link %]"><img src="[% doc.dir.abs_doc_root %]/images/arrow_right.gif" alt="-" align="middle" border="0" height="18" width="18">[% sec.title %]</a>
	[% IF sec.abstract %]
        <dd>[% sec.abstract %]
 	[% END %]
        </dl>
    [% END %]

